---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="TM Cositas - Tu evento asegurado" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/logo-tmcositas.ico" />
		<title>{title}</title>
	</head>
	<body>

		<Header />

		<main>
			<slot />
		</main>

		<Footer />
		
	</body>
</html>

