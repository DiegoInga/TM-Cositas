<section class="py-12 bg-white">
  <div class="container px-4 mx-auto">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      {services.map((service) => (
        <div class="flex flex-col items-center p-6 text-center">
          <div class="flex items-center justify-center p-4 mb-4 bg-pink-100 rounded-full">
            <span class="w-8 h-8 text-pink-500" innerHTML={service.icon}></span>
          </div>
          <h3 class="mb-2 text-xl font-semibold text-gray-800">{service.title}</h3>
          <p class="text-gray-600">{service.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  /* Asegura que los iconos tengan el tamaño correcto */
  .text-pink-500 svg {
    width: 2rem;
    height: 2rem;
    color: #ec4899; /* Color rosa para los iconos */
  }
</style>




