        </a>
      </div>
    </div>
    <div class="relative overflow-hidden transition-transform lg:w-1/2 duration-50 hover:scale-105" style="margin-top: -50px;"> <!-- Ajusta el valor de margin-top según sea necesario -->
      <div id="carousel" class="flex transition-transform duration-500 ease-in-out h-50 w-60">
        {images.map((image, index) => (
          <Image
            key={index.toString()}
            src={image.src}
            alt={image.alt}
            width={300}
            height={200}
            class="flex-shrink-0 w-full rounded-lg shadow-xl"
          />
        ))}
      </div>
    </div>
</div>

<style>
  #carousel {
    width: 100%;
    display: flex;
    transition: transform 0.5s ease;
  }
  .carousel-slide {
    min-width: 100%;
  }
</style>

<script is:inline>
  let index = 0;

  function slide(direction) {
    const carousel = document.getElementById('carousel');
    const totalSlides = carousel.children.length;
    index = (index + direction + totalSlides) % totalSlides;
    carousel.style.transform = `translateX(-${index * 100}%)`;
  }

  function autoSlide() {
    slide(1);
    setTimeout(autoSlide, 3000); // Cambia de imagen cada 3 segundos
  }

  window.onload = function() {
    autoSlide();
  };

  window.slide = slide;
</script>

