  { src: "/src/image/imagen7.jpg", alt: "Imagen 1" },
  { src: "/src/image/image1.jpeg", alt: "Imagen 2" },
  { src: "/src/image/image2.jpeg", alt: "Imagen 3" },
  { src: "/src/image/image3.jpeg", alt: "Imagen 4" },
